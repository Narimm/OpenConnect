<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version='3.0' method='upgrade' xsi:noNamespaceSchemaLocation="http://raw.github.com/cedricwalter/joomla-xsd/master/component.xsd"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
    <creationDate>November 2009</creationDate>
    <author>Ben Charlton</author>
    <authorEmail>jbenjicharlton@gmail.com</authorEmail>
    <name>OpenVPMS Connect</name>
    <version>0.0.1</version>
    <install>
        <sql>
            <file charset="utf8" driver="mysql">install.mysql.sql</file>
        </sql>
    </install>
    <administration></administration>
    <files folder="site">
        <folder>controllers</folder>
        <folder>tables</folder>
        <folder>views</folder>
        <folder>languages</folder>
        <filename>OpenConnect.php</filename>
        <filename>index.html</filename>
    </files>
    <languages folder="site">
        <language tag="en-GB">languages/en-GB/en-GB.com_OpenConnect.ini</language>
    </languages>
    <files folder="admin">
        <folder>controllers</folder>
        <folder>languages</folder>
        <folder>models</folder>
        <folder>views</folder>
        <filename>OpenConnect.php</filename>
        <filename>index.html</filename>
        <filename>install.mysql.sql</filename>
    </files>
    <languages folder="admin">
        <language tag="en-GB">languages/en-GB/en-GB.com_OpenConnect.ini</language>
        <language tag="en-GB">languages/en-GB/en-GB.com_OpenConnect.sys.ini</language>
    </languages>
</extension>